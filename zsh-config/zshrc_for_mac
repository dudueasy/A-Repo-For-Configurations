## bash functions
cdls(){
  clear && cd "$1" 
  if [ $? -eq 0 ] ; then 
    ls 
  else 
    echo 'Please type a valid path'
  fi
}

# copy .gitignore to current path
init_ignore(){ 
  declare -a ignoreList=('.idea/' 'node_modules' 'dist' 'stats.json' '*.log' '.vscode' )

  for i in "${ignoreList[@]}"
  do
    echo "$i" >> .gitignore
    # or do whatever with individual element of the array
  done
} 

# add files to .gitignore to current directory
ignore(){
  foreach i ($@)
    echo $i >> .gitignore
  end
}


## tmux functions

### tmux ls
tls(){
  tmux ls
}

### tmux new -s
tnew(){
  if [ ! -z "$1" ]
  then
    tmux new -s "$1"
  else
    tmux new
    echo "session name not set, default value will be used."
  fi
}

### tmux attach -t
ta(){
  tmux attach -t "$1"
}

### tmux detach
td(){
  tmux detach
}

### tmux kill-session -t
tks(){
  if [ ! -z "$1" ]
  then
    tmux kill-session -t "$1"
  else
    echo "tmux kill-session failed due to tmux session-name not being set"
  fi
}

